<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dineplan.activities.PaymentCashActivity">

    <include layout="@layout/header_add_food" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_25"
        android:orientation="vertical">


        <TextView
            style="@style/tv_normal"
            android:id="@+id/tv_heading"
            android:layout_gravity="center"
            android:gravity="center"
            android:typeface="monospace"
            android:text="@string/label_amount_tracking" />


        <EditText
            android:id="@+id/et_price"
            style="@style/et_style"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@drawable/et_mahroon_bg"
            android:drawableLeft="@drawable/cash_icon"
            android:drawablePadding="@dimen/margin_5"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_any_amount"
            style="@style/tv_small"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/label_any_amount"
            android:textColor="@color/text_color_light_gray" />


    </LinearLayout>

</LinearLayout>
