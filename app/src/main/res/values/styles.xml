<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/white</item>-->
        <item name="autoCompleteTextViewStyle">@style/searchableStyle</item>
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Inactive track color(30% transparency) -->
        <!--<item name="android:colorForeground">@color/color_gray</item>-->
        <!--<item name="android:actionOverflowButtonStyle">@style/MyOverFlow</item>-->
    </style>

   <!-- <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>-->

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!--

        <style name="MyOverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
            <item name="android:src">@drawable/icon_overflow</item>
        </style>
    -->

    <style name="searchableStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="et_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/margin_15</item>
        <item name="android:paddingTop">@dimen/margin_15</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textColorHint">@color/et_text_hint_color</item>
        <item name="android:background">@drawable/et_bg</item>
    </style>

    <style name="et_textarea">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/et_padding</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textColorHint">@color/et_text_hint_color</item>
        <item name="android:lines">5</item>
        <item name="android:maxLines">5</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


    <style name="btn_wrap_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">@dimen/btn_padding</item>
        <item name="android:paddingTop">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
    </style>

    <style name="btn_rounded_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/ecord_payment_btn</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">@dimen/btn_padding</item>
        <item name="android:paddingTop">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
    </style>

    <style name="btn_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/ecord_payment_btn</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="cb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_big_headingx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_big_headingx</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_big_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_big_heading</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_heading</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_subheading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_subheading</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="tv_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_small</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>


    <style name="progress_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>
